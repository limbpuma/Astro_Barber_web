---
import Button from "./Button.astro"
import { getI18N } from '../i18n';
const { currentLocale} = Astro
const i18n = getI18N({currentLocale});
---

<div class="hero min-h-screen" style="background-image: url(/images/hero1.jpeg);">
    <div class="hero-overlay bg-opacity-80"></div>
    <div class="hero-content text-center text-neutral-content">
      <div class="max-w-md">
        <div class="mb-12">
          <img src="/images/Frame.svg" alt="Frame Description" class="image-with-shadow mx-auto"/>
        </div>
        <h1 class="mb-5 text-5xl font-bold color-primary">{i18n.HERO.TITLE}</h1>
        <p class="mb-5 ">{i18n.HERO.TEXT}</p>
        <Button text={i18n.HERO.CTA_BUTTON_TEXT}/>
        
      </div>
    </div>
  </div>